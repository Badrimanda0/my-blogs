Questions.tsx
"use client";

import React, { useState } from "react";

interface FaqItem {
  q: string;
  a: string;
}

const faqs: FaqItem[] = [
  {
    q: "How quickly can I start processing payroll with FX Master?",
    a: "Many customers are able to begin processing payroll within 1–2 weeks depending on the size of the company and availability of required documents.",
  },
  {
    q: "What countries and currencies do you support?",
    a: "FX Master supports payroll in multiple countries and currencies. Reach out to our team for exact coverage.",
  },
  {
    q: "How do you ensure compliance with local employment laws?",
    a: "We work with local experts and update our platform for regulatory changes. Our team guides you through filings and contributions.",
  },
  {
    q: "What are your fees and pricing structure?",
    a: "Pricing depends on payroll complexity, number of employees and coverage. Contact sales for a tailored quote.",
  },
  {
    q: "How secure is my company and employee data?",
    a: "We use encryption, role-based access controls, and security audits to protect your data.",
  },
  {
    q: "Can I integrate FX Master with HR & accounting systems?",
    a: "Yes — FX Master provides APIs and connectors for HRIS and accounting systems.",
  },
  {
    q: "What kind of support do you provide?",
    a: "We offer email/phone support, onboarding, and optional account management for larger clients.",
  },
  {
    q: "How do you handle currency exchange & transfers?",
    a: "We partner with regulated FX providers and banks to ensure efficient transfers with competitive rates.",
  },
];

export default function FAQ() {
  const [openIndex, setOpenIndex] = useState<number | null>(null);

  return (
    <div className="min-h-screen bg-gradient-to-b from-gray-50 to-white flex flex-col items-center py-20 px-4">
      {/* Header */}
      <div className="flex flex-col items-center text-center mb-12">
        <div className="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-white shadow-sm text-sm mb-4">
          <svg
            className="w-4 h-4 text-blue-600"
            viewBox="0 0 24 24"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              d="M5 12l4 4L19 6"
              stroke="currentColor"
              strokeWidth="1.5"
              strokeLinecap="round"
              strokeLinejoin="round"
            />
          </svg>
          <span className="text-xs text-gray-600">Got</span>
        </div>

        <h1 className="text-5xl md:text-6xl font-bold leading-tight text-center text-transparent bg-clip-text bg-gradient-to-r from-blue-600 via-purple-500 to-orange-400">
          Questions?
        </h1>
        <p className="mt-4 text-base md:text-lg text-center text-gray-500 max-w-[866px]">
          Find answers to common questions about FX Master Payroll. Can't find what you're looking for? Our support team is here to help.
        </p>
      </div>

      {/* FAQ List */}
      <div className="w-full max-w-[866px] space-y-4">
        {faqs.map((item, idx) => {
          const isOpen = openIndex === idx;
          return (
            <div
              key={idx}
              className="bg-white rounded-[16px] shadow-sm border border-gray-100 overflow-hidden"
            >
              <button
                type="button"
                aria-expanded={isOpen}
                aria-controls={`faq-panel-${idx}`}
                onClick={() => setOpenIndex(isOpen ? null : idx)}
                className="w-full px-6 py-4 flex items-center justify-between focus:outline-none focus-visible:ring focus-visible:ring-blue-400"
              >
                <div className="flex items-center gap-4">
                  {/* Number badge */}
                  <div
                    className="w-8 h-8 flex items-center justify-center text-white font-semibold shadow-md"
                    style={{
                      background: "linear-gradient(90deg, #063fbb 0%, #e04401 100%)",
                      borderRadius: "9999px",
                    }}
                  >
                    {idx + 1}
                  </div>

                  {/* Question text */}
                  <div className="text-left">
                    <div className="text-sm md:text-base font-medium text-gray-800">
                      {item.q}
                    </div>
                  </div>
                </div>

                {/* Chevron */}
                <svg
                  className={`w-5 h-5 text-gray-400 transform transition-transform duration-200 ${
                    isOpen ? "rotate-180" : "rotate-0"
                  }`}
                  viewBox="0 0 20 20"
                  fill="none"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <path
                    d="M6 8l4 4 4-4"
                    stroke="currentColor"
                    strokeWidth="1.6"
                    strokeLinecap="round"
                    strokeLinejoin="round"
                  />
                </svg>
              </button>

              {/* Answer panel */}
              <div
                id={`faq-panel-${idx}`}
                className={`px-6 pb-4 text-sm md:text-base text-gray-600 transition-all duration-200 ${
                  isOpen ? "block" : "hidden"
                }`}
              >
                {item.a}
              </div>
            </div>
          );
        })}
      </div>
    </div>
  );
}
